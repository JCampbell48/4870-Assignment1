@model BlogApp.Models.Article

<h2>Create Article</h2>

<form asp-action="CreateArticle" method="post">
    <div>
        <label for="title">Title:</label>
        <input type="text" id="title" name="Title" value="@Model?.Title" required />
    </div>

    <div>
        <label for="body">Body:</label>
        <textarea id="body" name="Body" required>@Model?.Body</textarea>
    </div>

    <div>
        <label for="startDate">Start Date:</label>
        <input type="date" id="startDate" name="StartDate" value="@Model?.StartDate.ToString("yyyy-MM-dd")" required />
    </div>

    <div>
        <label for="endDate">End Date:</label>
        <input type="date" id="endDate" name="EndDate" value="@Model?.EndDate.ToString("yyyy-MM-dd")" required />
    </div>

    <button type="submit">Create</button>
</form>
